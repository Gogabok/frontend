@import "~themes/_variables"

$contentWidth = 500px

.user-profile
  position: fixed
  top: 0
  right: 0
  bottom: $bottomAppMenuHeight
  left: var(--sidebar-width)
  overflow-y: scroll
  z-index: 11
  background-color: var(--lightgray)
  background: var(--lightgray)

  &__section
    width: "calc(100% - %s)" % ($hSpacing * 5.2)
    max-width: ($contentWidth)
    margin: 0 auto
    padding: ($vSpacing * 0.75) 0
    &:not(:last-child)
      border-bottom: 1px solid var(--gray)

.is-mobile .user-profile
  left: 0
  width: 100%
  height: 100%

  &__section
    max-width: 100%
