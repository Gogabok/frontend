@import "~themes/_variables"

$contentWidth = 500px
$footerHeight = 56px

.create-group__select
  width: calc(100% - var(--sidebar-width))
  height: "calc(var(--vh, 1vh) * 100 - %s)" % ($bottomAppMenuHeight)
  bottom: $bottomAppMenuHeight
  position: fixed
  display: flex
  flex-direction: column
  left: var(--sidebar-width)
  z-index: 13

  &__backlayer
    width: 100%
    height: 100%
    background-color: var(--overlay-backplate)
    z-index: -1
    position: absolute
    top: 0
    left: 0

  &__content
    flex-grow: 1
    width: 100%
    height: 0
    margin: 0 auto
    max-width: $contentWidth
    position: relative
    display: flex
    flex-direction: column

  &__footer
    width: 100%
    position: relative
    display: flex
    align-items: center
    justify-content: space-between
    height: $footerHeight
    padding: ($vSpacing) ($hSpacing * 2.5)
    background-color: var(--lightgray)
    border-top: 1px solid var(--gray)

    .close
      transform: rotateZ(45deg)

    .confirm
      transition: 0.2s ease-in-out color

      &.active
        color: var(--blue)


.is-mobile .create-group__select
  width: 100%
  left: 0
  height: 100%
  bottom: 0

  &__content
    max-width: unset
