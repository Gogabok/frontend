@import "~themes/_variables"

$height = 60px
$angleIconStrokeWidth = 5px


.profile-settings__header-bar
  display: flex
  justify-content: flex-end
  align-items: center
  position: fixed
  top: 0
  left: 0
  right: 0
  width: 100%
  height: $height
  padding: 0 $hSpacing
  border-bottom: 1px solid transparent
  z-index: 3
  font-size: var(--regularFont)
  color: white
  transition: background-color 0.2s ease-in-out,
              color 0.2s ease-in-out

  &__back
    display: none
    align-items: center
    justify-content: flex-start

    svg.icon
      margin-right: ($hSpacing * 1.3)
      margin-left: 0
      height: $iconSize
      transform: rotate(180deg)
      stroke: var(--white)
      transition: 0.2s ease-in-out stroke
      --stroke-width: $angleIconStrokeWidth

.scrolled
  .profile-settings__header-bar
    border-color: var(--gray)
    background-color: var(--white)
    color: var(--graydarker)

    &__back svg
      stroke: var(--graydarker)



.is-mobile
  .profile-settings__header-bar
    justify-content: space-between

    &__back
      display: flex
