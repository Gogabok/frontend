@import "~themes/_variables"

$borderRadius = 20px
$maxHeight = 163px

.dialog-time
  &__item
    padding: ($vSpacing * 0.5) $hSpacing
    border: 1px solid var(--gray)
    border-radius: $borderRadius
    background: var(--lightgrey2)
    color: var(--graydarker)

    .cost_text
      display: flex
      flex-display: column
      align-items: center
      padding: $vSpacing $hSpacing
      &-item
        &__price
          display: block
          margin-bottom: ($vSpacing * 1.2)

        &__content
          display: block
          width: 100%

  &__translate
    height: 100%
    max-height: 0
    margin-top: 0
    visibility: hidden
    opacity: 0
    transition: all .4s ease-out
    overflow: hidden
    text-align: center

    .dialog-time__item
      margin-bottom: 0

    &-show
      max-height: $maxHeight
      margin-top: ($vSpacing * 2)
      margin-bottom: @margin-top
      visibility: visible
      opacity: 1
