@import "~themes/_variables"

$borderRadius = 13px
$avatarSize = 30px

.message__container-replied
  &.message__container-replied-noself
    .message__container-forwarded-box
      margin-top: (- $vSpacing)
      margin-right: (- $hSpacing)
      margin-bottom: 0
      margin-left: (- $hSpacing)
      padding-top: $vSpacing
      padding-right: $hSpacing
      padding-bottom: $vSpacing
      padding-left: $hSpacing
      border-top-left-radius: $borderRadius
      border-top-right-radius: $borderRadius

      &.toCurrentUser
        background: var(--own-message-background-color)

  &-box
    padding-bottom: $vSpacing
    margin-bottom: $vSpacing
    border-bottom: 1px solid var(--gray)
    cursor: pointer

    &.toCurrentUser
      background: var(--own-message-background-color)

    .replied
      &__text
        display: -webkit-box
        overflow: hidden
        font-size var(--smallFont)
        color: var(--graydarker)
        text-overflow: ellipsis
        -webkit-box-orient: vertical
        -webkit-line-clamp: 1

      &__container
        display flex
        justify-content space-between
        align-items center

      &__box
        display flex
        flex-direction column
        justify-content space-around
        width: 100%
        height: 100%

      &__image
        width: $avatarSize
        height: $avatarSize
        margin-right: $hSpacing
        object-fit cover

  &.message__container-video
    padding: $vSpacing $hSpacing

  .message__container-forwarded-text svg
    height: round($iconSize * 0.54)
    margin-right: $hSpacing
    transform translateY(-1px)
    &.message__container-forwarded-text-forwarded
      height: round($iconSize * 0.54)
      transform translateY(1px)

  .message__container-forwarded-box
    border-bottom: 0

  .message__container-file__item
    margin-bottom: ($vSpacing * 0.5)
    padding-bottom: $vSpacing
    border-bottom: 1px solid var(--gray)
    position: relative
