@import "~themes/_variables"

$avatarSize = 30px

.reply
  position: absolute
  left: 0
  right: 0
  top: 0
  border-top: 1px solid var(--gray)
  z-index: 5
  transform: translateY(calc(-100% - 1px))
  background: var(--lightgray)
  cursor: pointer

  &-speaker
    background: var(--own-message-background-color)

  &__container
    display: flex
    align-items: center
    justify-content: space-between
    padding: ($vSpacing) ($hSpacing * 2.5)

  &__message
    display: flex
    flex-direction: column
    width: 100%

  &__image
    width: $avatarSize
    height: $avatarSize
    margin-right: $hSpacing
    object-fit: cover

  &__box
    display: flex
    align-items: center

  &__header
    display: flex
    align-items: center
    margin-bottom: $vSpacing

    svg
      height: round($iconSize * 0.54)
      margin-right: $hSpacing
      transform: translateY(-1px)

  &__author
    color: var(--gray)
    font-size: var(--smallFont)

  &__text
    display: -webkit-box
    -webkit-box-orient: vertical
    -webkit-line-clamp: 1
    text-align: left
    overflow: hidden
    text-overflow: ellipsis

  &__close
    margin-left: ($hSpacing * 2.5)

    svg
      transform: rotate(45deg)
