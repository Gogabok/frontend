@import "~themes/_variables"

$iconSize = 25px

.item
  display: flex
  align-items: center
  justify-content: space-between
  height: 100%
  padding: ($vSpacing * 1.3) ($hSpacing * 2.6)
  padding-right: ($hSpacing * 3)

  & > *
    -webkit-touch-callout: none  // iOS Safari
    -webkit-user-select: none    // Safari
    -khtml-user-select: none     // Konqueror HTML
    -moz-user-select: none       // Old versions of Firefox
    -ms-user-select: none        // Internet Explorer/Edge
    user-select: none

  &__icon
    width: $iconSize
    margin-top: ($vSpacing * 0.4)
    border-radius: 100%
    text-align: center

    svg
      height: ($iconSize * 0.8)

  &__text
    width: 90%
    margin: 0 ($hSpacing * 1.5)
    font-size: var(--regularFont)
    cursor: pointer

  &__arrow
    margin-top: ($hSpacing * 0.2)

    svg
      width: round($iconSize * 0.27)
