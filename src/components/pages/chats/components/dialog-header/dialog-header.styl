@import "~themes/_variables"

$avatarSize = 35px
$avatarSpacingBorderWidth = 2px

.dialog-header
  display: flex
  justify-content: space-between
  position: absolute
  top: 0
  right: 0
  left: 0
  width: 100%
  height: $dialogHeaderHeight
  padding: 0 ($hSpacing * 2.5)
  border-bottom: 1px solid var(--gray)
  z-index: 6
  background-color: var(--lightgray)

  &__chat-info
    display: flex
    align-items: center
    flex-grow: 1
    width: 0
    height: 100%

    &__arrow
      margin-right: ($vSpacing * 2)
      padding: ($vSpacing * 0.5) ($hSpacing * 0.5)
      cursor: pointer

      img
        height: round($iconSize * 1.15)
        transform: rotate(180deg)

    &__checkbox
      margin-right: ($hSpacing * 3)
      &-border
        display: flex
        justify-content:center
        align-items: center
        width: $iconSize
        height: @width
        border: 1px solid var(--gray)
        border-radius: 50%
        background-color: var(--white)
      &-icon
        width: round($iconSize * 0.45)


    &__avatar
      display: flex
      justify-content: center
      align-items: center
      min-width: $avatarSize
      width: $avatarSize
      height: @width
      margin-right: $hSpacing
      border: 1px solid var(--gray)
      border-radius: 50%
      overflow: hidden
      background-color: var(--white)

      &.is-online
        border-color: var(--online-color)
      &.is-offline
        border-color: var(--offline-color)
      &.is-busy
        border-color: var(--busy-color)
      &.is-away
        border-color: var(--idle-color)

      &__icon
        width: "calc(100% - %s)" % ($avatarSpacingBorderWidth*2)
        height: @width
        border-radius: 50%
        overflow: hidden
        background-repeat no-repeat
        background-position: center center

    &__selected-counter
      font-size: var(--regularFont)

    &__container
      display: flex
      flex-direction: column
      justify-content: center
      flex-grow: 1
      font-size: var(--regularFont)
      line-height: 1
      color: var(--black)

      &-name
        max-width: "calc(100% - %s)" % ($vSpacing * 4)
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
        line-height: 1.3
        margin-bottom: -0.2em

      &-status
        margin-top: ($vSpacing * 0.4)
        font-size: var(--extrasmallFont)
        color: var(--graydarker)


  .devices-tools
    display: flex
    align-items: center

    &__icon
      &.audio svg
        height: $iconSize
      &.video
        margin-right: ($vSpacing * 3)

  &__calls
    display: flex
    align-items: center

    &__call
      display: block
      width: fit-content

      &.video
        margin-right: ($vSpacing * 3)

      &.audio svg
        height: $iconSize

      svg
        height: round($iconSize * 0.9)

&.is-mobile
  .dialog-header
    padding: 0 $hSpacing
