@import "~themes/_variables"

$controlsPanelHeight = 50px

.media-player__media-line
  display: grid
  grid-template-columns: 1fr
  grid-gap: ($hSpacing * 0.2)
  width: 100%
  height: 100%
  padding-bottom: $controlsPanelHeight
  overflow: hidden auto
  background-color: var(--media-player-background-color)

  &::-webkit-scrollbar
    display: none
