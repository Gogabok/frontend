@import "~themes/_variables"

.main-container:not(.is-mobile) .media-player__header
  padding-right: ($hSpacing * 2.5)
  padding-left: ($hSpacing * 2.5)

.media-player__header
  display: flex
  align-items: center
  justify-content: space-between
  position: absolute
  left: 0
  top: 0
  right: 0
  height: $dialogHeaderHeight
  z-index: 12
  padding: 0 ($hSpacing * 1.5)
  background-color: var(--media-player-background-color-opacity)

  &__control-button:hover
    cursor: pointer

  &-arrow
    display: flex
    align-items: center
    position: relative
    padding: ($hSpacing * 0.5)
    z-index: 2
    color: var(--darksilver)
    cursor: pointer

    svg
      margin-right: ($hSpacing * 1)
      height: floor($dialogHeaderHeight * 0.3)
      transform: rotateY(180deg)

    path
      fill: white

  &__checkbox
    width: $checkboxSize
    height: $checkboxSize
    border: 1px solid var(--gray)
    background: var(--white)
    border-radius: 50%
    transition: all .2s ease-out
    z-index: 6
    position: relative
    display: block

    &__icon
      width: ($checkboxSize/2)
      position: absolute
      left: 50%
      top: 50%
      -webkit-transform: translate(-50%, -50%)
      transform: translate(-50%, -50%)

  &-text
    position: relative
    z-index: 2
    font-size: var(--regularFont)
    transition: 0.2s ease-in-out color
    color: var(--darksilver)

    &:hover
      color: var(--white)

  &-gradient
    position: absolute
    left: 0
    top: 0
    right: 0
    height: round($dialogHeaderHeight * 1.67)
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, .2),
      rgba(0, 0, 0, 0)
    )

  &-background
    .media-player__header-scaled
      &-gradient
        visibility: hidden
        opacity: 0

      &-text
        color: var(--darkgray)

.media-player__circle
  &:hover .cls-1
    stroke: var(--superdarkgray) !important

  &.active-icon:hover .cls-1
    stroke: var(--blue) !important


.is-mobile .media-player__header-text:hover
  color: var(--white)
