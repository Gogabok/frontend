@import "~themes/_variables"

$participantSize = 70px
$activeBorderRadius = 5px

.participant
  width: $participantSize
  height: @width
  border-radius: 50%
  margin-right: $hSpacing
  overflow: hidden
  display: flex
  justify-content: center
  align-items: center
  background-color: white
  position: relative
  flex-shrink: 0

  &:last-child
    margin-right: 0

  &.active
    border-radius: $activeBorderRadius

  &.muted
    &::before
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(0, 0, 0, 0.4)
      z-index: 2

  &__video
    width: 100%
    height: 100%
    background-color: var(--call-footer-background)
    object-fit: cover

  &__avatar
    width: 100%
    height: 100%
    object-fit: cover
    object-position: center center

    ^[0].default ^[0]__avatar
      height: 50%
      transform: translateY(-2px)

  &__mic-icon
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: fit-content
    height: fit-content
    z-index: 10

    &::after
      content: ''
      position: absolute
      top: 40%
      left: 50%
      transform: translate(-50%, -50%) rotate(-45deg)
      width: calc(200%)
      height: 1px
      background-color: var(--white)
      background: var(--white)
      transition: all 0.2s ease-out

    svg
      height: round($iconSize * 0.72)
      width: auto
      stroke: white
