@import "~themes/_variables"

$borderRadius = 20px
$maxDescriptionHeight = 300px

.share-item
  display: flex
  justify-content: space-between
  align-items: center
  flex-direction: column
  margin-bottom: ($vSpacing * 2.7)
  padding-bottom: ($vSpacing * 2.7)
  border-bottom: 1px solid var(--gray)

  &:last-child
    border-bottom: none
    padding-bottom: 0
    margin-bottom: 0

  &__header
    display: flex
    width: 100%
    align-items: center
    justify-content: space-between
    margin-bottom: $vSpacing * 2

  &__angle-icon
    transition: 0.2s ease-in-out transform
    height: round($iconSize * 0.5)
    &.rotated
      transform: rotateZ(90deg)

  &__description
    width: 100%
    max-height: 0
    will-change: max-height
    overflow: hidden
    transition: 0.3s ease-in-out max-height,
                0.2s ease-in-out padding

    &.expanded
      max-height: $maxDescriptionHeight
      padding-bottom: $vSpacing * 1.5

  &__label
    margin: 0
    font-size: var(--mediumFont)
    font-weight: 400
    color: var(--graydarker)

  &__data
    padding-right: ($hSpacing * 0.5)
    overflow: hidden
    font-size: var(--regularFont)
    color: var(--graydarker)
    font-family: 'Verdana'
    text-overflow: ellipsis
    white-space: nowrap
    text-align: left

    &-wrapper
      display: flex
      justify-content: space-between
      align-items: center
      flex-grow: 1
      width: 100%
      //max-width: "calc(100% - %s)" % ($hSpacing * 10)
      padding: ($vSpacing * 0.8) ($hSpacing * 2)
      border: 1px solid var(--gray)
      border-radius: $borderRadius

  &__icon
    display: block
    flex-shrink: 0
    width: round($iconSize * 0.68)
