@import "~themes/_variables"

$maxContainerWidth = 90%
$borderRadius = 13px

.alert
  display: flex
  align-items: center
  justify-content: center
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: var(--sidebar-width)
  z-index: 12

  &__container
    max-width: $maxContainerWidth
    padding: ($vSpacing * 2) ($hSpacing * 3.5)
    border-radius: $borderRadius
    z-index: 5
    background: var(--lightgray)
    text-align: left

  &__overlay
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: 1
    background: var(--overlay-backplate)

  &__text
    user-select: none
    -moz-user-select: none
    -webkit-user-select: none

.is-mobile .alert
  left: 0

