@import "~themes/default/main"

.popup-list
  z-index: 30001

.main-container
  width: 100vw
  height: calc(var(--vh, 1vh) * 100)

  &.is-dragging
    user-select: none

  .app-wrap
    position: relative
    height: 100%
    overflow-x: hidden
    background-color: var(--lightgray)

    .wrap
      display: flex
      justify-content: space-between
      flex-direction: column
      position: relative
      min-height: 100%

      &__body
        display: flex
        flex-grow: 1
        position: relative
        height: 100%

        .right-side
          width: 100%
          padding: 0

          .content
            height: 100%
