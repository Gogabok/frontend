@import "~themes/_variables"

.app-leftside-menu__item
  display: flex
  justify-content: flex-start
  align-items: center
  height: 100%
  padding: ($vSpacing * 1.3) ($hSpacing * 2.5)

  &__icon
    display: flex
    align-items: center
    width: round($iconSize * 0.9)
    height: 100%

    svg
      width: round($iconSize * 0.9)

  &:hover
    color: var(--superdarkgray)

    line, path, ellipse, circle
      stroke: var(--superdarkgray) !important

    text
      fill: var(--superdarkgray)

    span
      color: var(--superdarkgray)

  &__text
    flex-grow: 1
    width: 0
    margin: 0 ($hSpacing * 1.5)
    font-size: var(--regularFont)
    color: var(--graydarker)
    cursor: pointer

  &__arrow
    margin-left: auto

    svg
      width: round(0.28 * round($iconSize * 0.9))
