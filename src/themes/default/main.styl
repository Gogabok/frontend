@import "./reset"
@import "./responsive"
@import "./colors"
@import "./sizes"
@import "./utils"
@import "./icons"
@import "./scrollbar"
@import "./animations"
@import "./spinner"
@import "./tooltips"
@import "./datepicker"
@import "./emoji"
@import "./menu-actions"
@import "./inputs"


html
  min-width: $page.min.width
  font-size: $page.font.size.base.desktop
  height: 100vh
  height: calc(var(--vh, 1vh) * 100)
  +mobile()
    font: $page.font.size.base.mobile / $line-height.medium Verdana, Geneva, sans-serif

body
  margin: 0
  padding: 0
  height: 100%
  color: #888
  font: $page.font.size.base.desktop / $line-height.medium Verdana, Geneva, sans-serif
  background: $color.background.default
  display: flex
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  +mobile()
    font: $page.font.size.base.mobile / $line-height.medium Verdana, Geneva, sans-serif
  &.locked
    +mobile()
      overflow: hidden

a
  color: $color.font.link
  text-decoration: none
  outline: none
  transition: color $transition.duration.fast ease
  user-select: none
  +as-hovered()
    color: $color.font.link-hover !important
    cursor: pointer

input, textarea, select
  color: $color.font.default
  border: 0
  background: none
  outline: none
  font: inherit

input
  border: none

select
  disable-appearance()
  cursor: pointer
  height: auto

@-moz-document url-prefix()
  select
    margin-left: -4px !important

@supports (-ms-ime-align: auto)
  input
    margin-left: -1px !important
    &::-ms-clear
      display: none
  select
    margin-top: -1px !important
    margin-left: -3px !important

.icon
  >>> label
    cursor: pointer

*
  box-sizing: border-box

input.emoji
  display: -moz-inline-box
  -moz-box-orient: vertical
  display: inline-block
  vertical-align: baseline
  width: 1em
  height: 1em
  line-height: 1
  cursor: text
  position: relative

span.emoji-sizer
  line-height: 0.81em
  font-size: initial
  margin: -2px 0

span.emoji-outer
  display: -moz-inline-box
  display: inline-block
  height: 1em
  width: 1em

span.emoji-inner
  display: -moz-inline-box
  display: inline-block
  text-indent: -9999px
  width: 100%
  height: 100%
  vertical-align: baseline

img.emoji
  width: 1em
  height: 1em

[contenteditable=true]:empty:before
  content: attr(placeholder)
  color: $color.font.placeholder

.pointer-events-off
  +mobile()
    pointer-events: none

button
  background-color: unset
  border: none
  color: unset

  &:hover
    cursor: pointer

.scroll-smooth
  scroll-behavior: smooth

input.hidden-input
  visibility: collapse
  width: 0
  height: 0
  overflow: hidden
  opacity: 0
